<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/GoukeiKingakuLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="合計金額を入力してください"
        android:layout_marginTop="10dp"
        android:textSize="27sp"
        android:textStyle="bold" />

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/GoukeiKingakuText"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="number" />

        <TextView
            android:id="@+id/GoukeiKingakuEnLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="円"
            android:textSize="27sp" />

    </LinearLayout>


    <TextView
        android:id="@+id/KanpaKingakuLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="カンパ金額"
        android:layout_marginTop="20dp"
        android:textSize="27sp"
        android:textStyle="bold" />

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/KanpaText"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number" />

        <TextView
            android:id="@+id/KanpaEnLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="円"
            android:textSize="27sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/NinzuLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="人数"
        android:layout_marginTop="20dp"
        android:textSize="27sp"
        android:textStyle="bold" />

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/NinzuText"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:inputType="number" />

        <TextView
            android:id="@+id/HitoLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人"
            android:textSize="27sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/KeisanLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="計算方法を選択"
        android:textSize="27sp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/button100"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="10dp"
        android:text="100円切り" />

    <Button
        android:id="@+id/button500"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="500円切り" />

    <Button
        android:id="@+id/button1000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="1000円切り" />




</LinearLayout>